<Window x:Class="Gymplanner.Windows.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Gymplanner" Height="834" Width="1000">
   <Grid>
       <!-- Define Rows: Header, Content -->
       <Grid.RowDefinitions>
           <RowDefinition Height="Auto"/>
           <RowDefinition Height="*"/>
       </Grid.RowDefinitions>

       <!-- Header -->
       <DockPanel Grid.Row="0" Background="#FF7B68EE" Height="60" LastChildFill="False">
           <!-- Logo on the Left -->
           <Button Content="LOGO"
                   FontWeight="Bold"
                   Width="100"
                   Height="30"
                   Margin="10,0"
                   VerticalAlignment="Center"
                   DockPanel.Dock="Left"/>

           <!-- Login on the Right -->
           <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="0,0,10,0" VerticalAlignment="Center">
               <Button Content="LOG IN"
                       Width="80"
                       Height="30"
                       Click="Login_Click"/>
               <Button Width="30" Height="30" Margin="5,0,0,0" Click="UserProfile_Click">
                   <Image Source="/Assets/user_icon.png" Stretch="Uniform"/>
               </Button>
           </StackPanel>
       </DockPanel>

       <!-- Main Content Scrollable -->
       <ScrollViewer Grid.Row="1">
           <!-- Replaced StackPanel with ItemsControl to support spacing -->
           <ItemsControl Margin="20">
               <ItemsControl.ItemsPanel>
                   <ItemsPanelTemplate>
                       <StackPanel/>
                   </ItemsPanelTemplate>
               </ItemsControl.ItemsPanel>
               <ItemsControl.ItemContainerStyle>
                   <Style>
                       <Setter Property="FrameworkElement.Margin" Value="0,0,0,20"/>
                   </Style>
               </ItemsControl.ItemContainerStyle>

               <!-- Quote Section -->
               <TextBlock Text="“QUOTE”"
                          FontSize="28"
                          FontStyle="Italic"
                          Margin="0,10"/>

               <!-- Banner Image -->
               <Image Source="/Assets/banner_placeholder.png"
                      Height="200"
                      Stretch="UniformToFill"/>

               <!-- How It Works -->
               <TextBlock Text="HOW IT WORKS"
                          FontSize="24"
                          FontWeight="Bold"
                          Margin="0,20,0,5"/>
               <Border Height="150"
                       Background="#FFD3D3D3"/>

               <!-- About Us -->
               <TextBlock Text="ABOUT US"
                          FontSize="24"
                          FontWeight="Bold"
                          Margin="0,20,0,5"/>
               <Grid>
                   <Grid.ColumnDefinitions>
                       <ColumnDefinition Width="2*"/>
                       <ColumnDefinition Width="3*"/>
                   </Grid.ColumnDefinitions>

                   <!-- About Text Placeholder -->
                   <Border Grid.Column="0"
                           Height="120"
                           Background="#FFD3D3D3"/>

                   <!-- About Image Placeholder -->
                   <Image Grid.Column="1"
                          Source="/Assets/about_placeholder.png"
                          Height="120"
                          Stretch="UniformToFill"
                          Margin="10,0,0,0"/>
               </Grid>
           </ItemsControl>
       </ScrollViewer>
   </Grid>
</Window>
