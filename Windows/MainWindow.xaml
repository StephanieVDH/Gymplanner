<Window x:Class="Gymplanner.Windows.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Gymplanner" Height="1006" Width="1000">
    <Grid>
        <!-- Define Rows: Header, Content, Footer -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Background="#FF7B68EE" Height="60" LastChildFill="False">
            <!-- Logo on the Left -->
            <Image Source="/Images/Gymplanner_transparent.png"
                   Width="100"
                   Height="50"
                   Margin="10,0"
                   VerticalAlignment="Center"
                   DockPanel.Dock="Left"
                   Stretch="Uniform"/>

            <!-- Login on the Right -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="0,0,10,0" VerticalAlignment="Center">
                <Button x:Name="AuthButton"
                    Click="AuthButton_Click"
                    Width="100" Height="30">
                    <Button.Style>
                        <Style TargetType="Button">
                            <!-- default (LOG IN) chrome -->
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Background"      Value="LightGray"/>

                            <Style.Triggers>
                                <!-- when AvatarPanel shows, strip the chrome -->
                                <DataTrigger Binding="{Binding ElementName=AvatarPanel, Path=Visibility}"
                     Value="Visible">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Background"      Value="Transparent"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Grid>
                        <!-- LOGIN state -->
                        <StackPanel x:Name="LoginPanel" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="LOG IN" FontWeight="Bold"/>
                        </StackPanel>

                        <!-- PROFILE state -->
                        <Image x:Name="AvatarPanel"
                           Source="/Images/avatar.png"
                           Width="32" Height="32"
                           Visibility="Collapsed"/>
                    </Grid>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- Main Content Scrollable -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl Margin="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="FrameworkElement.Margin" Value="0,0,0,20"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>

                <Button x:Name="AdminButton"
                    Content="Admin TEST"
                    Width="100"
                    Margin="10,0,0,0"
                    Click="AdminButton_Click"/>

                <TextBlock Text="Make your personalised gym schedule in 5 min!"
                          FontSize="28"
                          FontStyle="Italic"
                          Margin="0,10"/>

                <Image Source="/Images/pick_up.jpg"
                      Height="200"
                      Stretch="UniformToFill"/>

                <TextBlock Text="HOW IT WORKS"
                          FontSize="24"
                          FontWeight="Bold"
                          Margin="0,20,0,5"/>

                <TextBlock Text="It's pretty easy, you make an account and fill in your info. After that you can start the gymplanner, where you'll answer some questions about your current gym habits to generate a custom gym schedule. So, what are you waiting for? Let's get started!"
                          TextWrapping="Wrap"
                          FontSize="18"
                          Margin="0,10,0,10"
                          Height="Auto"/>

                <TextBlock Text="ABOUT US"
                          FontSize="24"
                          FontWeight="Bold"
                          Margin="0,20,0,5"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="We are two women in our 20s with a shared passion for fitness and wellness. After years of building our own workout routines and tracking progress, we created this gym planner to help others stay organized, motivated, and consistent in reaching their goals. Our mission is to make fitness planning simple, effective, and accessible for everyone."
                               TextWrapping="Wrap"
                               FontSize="16"
                               Margin="0,10,0,10"
                               Height="Auto"/>

                    <Image Grid.Column="1"
       Source="/Images/about_us.jpg"
       Height="280"
       Stretch="UniformToFill"
       VerticalAlignment="Bottom"
       HorizontalAlignment="Center"
       Margin="10,0,0,0"/>
                </Grid>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer  (icoontjes toevoegen)-->
        <DockPanel Grid.Row="2" Background="#FF7B68EE" Height="40">
            <TextBlock Text="nr.: 046567983     |     Mail: info@gymplanner.com"
                      Foreground="White"
                      VerticalAlignment="Stretch"
                      HorizontalAlignment="Center"
                      FontSize="14"/>
        </DockPanel>
    </Grid>
</Window>

