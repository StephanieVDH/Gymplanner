<Window x:Class="Gymplanner.Views.AdminPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Page" Height="600" Width="900">
    <Grid Margin="10">
        <TabControl>
            <!-- Users Management Tab -->
            <TabItem Header="Users">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="AddUserButton" Content="Add User" Width="100" Margin="0,0,10,0"/>
                        <Button x:Name="EditUserButton" Content="Edit User" Width="100" Margin="0,0,10,0"/>
                        <Button x:Name="DeleteUserButton" Content="Delete User" Width="100"/>
                    </StackPanel>
                    <!-- Users DataGrid -->
                    <DataGrid x:Name="UsersDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                            <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Exercises Management Tab -->
            <TabItem Header="Exercises">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Add Exercise Button -->
                    <Button x:Name="AddExerciseButton" Content="Add Exercise" Width="120" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <!-- Exercises DataGrid -->
                    <DataGrid x:Name="ExercisesDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Muscle Group" Binding="{Binding MuscleGroup}" Width="*"/>
                            <DataGridTextColumn Header="Difficulty" Binding="{Binding Difficulty}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

