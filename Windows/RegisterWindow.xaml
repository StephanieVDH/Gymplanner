<Window x:Class="Gymplanner.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gymplanner"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <StackPanel Width="300"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <!-- Title -->
            <TextBlock Text="CREATE ACCOUNT"
                       FontSize="32"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />

            <!-- Name -->
            <TextBlock Text="USERNAME"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4" />
            <TextBox Name="UserNameTextBox"
                     Height="30"
                     Margin="0,0,0,12" />

            <!-- Email -->
            <TextBlock Text="EMAIL"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4" />
            <TextBox Name="EmailTextBox"
                     Height="30"
                     Margin="0,0,0,12" />

            <!-- Password -->
            <TextBlock Text="PASSWORD"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4" />
            <Grid Height="30" Margin="0,0,0,12">
                <PasswordBox Name="PasswordBox"
                             Height="30"
                             Padding="0,0,30,0"
                             PasswordChanged="PasswordBox_PasswordChanged" VerticalAlignment="Bottom" />
                <TextBox Name="PasswordTextBox"
                         Height="30"
                         Padding="0,0,30,0"
                         Visibility="Collapsed"
                         TextChanged="PasswordTextBox_TextChanged" />
                <Image Name="PasswordEyeIcon"
                       Source="/Images/eye icon.jpg"
                       Width="20"
                       Height="20"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"
                       Cursor="Hand"
                       MouseLeftButtonDown="PasswordEyeIcon_Click" />
            </Grid>
            <!-- Confirm Password -->
            <TextBlock Text="CONFIRM PASSWORD"
           FontWeight="SemiBold"
           Margin="0,0,0,4" />
            <Grid Height="30" Margin="0,0,0,12">
                <PasswordBox Name="ConfirmPasswordBox"
                 Height="30"
                 Padding="0,0,30,0"
                 PasswordChanged="ConfirmPasswordBox_PasswordChanged" />
                <TextBox Name="ConfirmPasswordTextBox"
             Height="30"
             Padding="0,0,30,0"
             Visibility="Collapsed"
             TextChanged="ConfirmPasswordTextBox_TextChanged" />
                <Image Name="ConfirmPasswordEyeIcon"
           Source="/Images/eye icon.jpg"
           Width="20"
           Height="20"
           HorizontalAlignment="Right"
           VerticalAlignment="Center"
           Margin="0,0,5,0"
           Cursor="Hand"
           MouseLeftButtonDown="ConfirmPasswordEyeIcon_Click" />
            </Grid>

            <!-- Date of Birth 
            <TextBlock Text="DATE OF BIRTH"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4" />
            <DatePicker Name="DobPicker"
                        Height="30"
                        Margin="0,0,0,20"
                        SelectedDateFormat="Short" />  -->

            <!-- Sign Up Button -->
            <Button Content="SIGN UP"
                    Height="40"
                    Background="#FFDA44AA"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Click="SignUpButton_Click" />
        </StackPanel>
        <Image Source="/Images/Gymplanner_cropped.jpg"
         Width="100"
       Height="100"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"
       Margin="10"/>
    </Grid>
</Window>
