<Window x:Class="Gymplanner.Windows.PasswordResetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Password" 
        Height="517" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Background="#FFF8F8F8">
        <Border Background="White" 
                Margin="20"
                CornerRadius="8"
                Padding="30">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  BlurRadius="10" 
                                  ShadowDepth="2" 
                                  Opacity="0.2"/>
            </Border.Effect>

            <StackPanel>
                <!-- Title -->
                <TextBlock Text="RESET PASSWORD"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"
                           Foreground="#FF333333"/>

                <!-- Current Password -->
                <TextBlock Text="Current Password:"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           Foreground="#FF666666"/>
                <PasswordBox x:Name="CurrentPasswordBox"
                             Margin="0,0,0,15"
                             Padding="8"
                             BorderBrush="#FFDDDDDD"
                             BorderThickness="1"/>

                <!-- New Password -->
                <TextBlock Text="New Password:"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           Foreground="#FF666666"/>
                <PasswordBox x:Name="NewPasswordBox"
                             Margin="0,0,0,15"
                             Padding="8"
                             BorderBrush="#FFDDDDDD"
                             BorderThickness="1"/>

                <!-- Confirm Password -->
                <TextBlock Text="Confirm New Password:"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           Foreground="#FF666666"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Margin="0,0,0,20"
                             Padding="8"
                             BorderBrush="#FFDDDDDD"
                             BorderThickness="1"/>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorMessageText"
                           Text=""
                           Foreground="Red"
                           FontSize="12"
                           Margin="0,0,0,15"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">

                    <Button x:Name="CancelButton"
                            Content="CANCEL"
                            Background="#FF666666"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="15,8"
                            FontSize="12"
                            FontWeight="Bold"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            Click="CancelButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF555555"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="ResetButton"
                            Content="RESET PASSWORD"
                            Background="#FF007ACC"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="15,8"
                            FontSize="12"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="ResetButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF0066AA"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>