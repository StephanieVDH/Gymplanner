<Window x:Class="Gymplanner.Windows.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gymplanner.Windows"
        mc:Ignorable="d"
        Title="Profile" Height="800" Width="800"
        WindowStartupLocation="CenterScreen">

    <!-- 1) Embed the default avatar as a pack URI -->
    <Window.Resources>
        <ImageBrush x:Key="DefaultAvatarBrush"
                ImageSource="pack://application:,,,/Images/avatar.png"/>
    </Window.Resources>

    <Grid>
        <!-- Main Content Border -->
        <Border Background="White" Margin="20" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    Padding="40">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Row="0"
                     Text="PROFILE"
                     FontSize="28"
                     FontWeight="Bold"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,30"
                     Foreground="#FF333333"/>

                    <!-- Profile Picture Section -->
                    <StackPanel Grid.Row="1"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,25">
                        <!-- 2) Use embedded brush as default -->
                        <Ellipse x:Name="ProfileImageEllips"
                     Width="120" Height="120"
                     Margin="0,0,0,15"
                     Stroke="#FFDDDDDD"
                     StrokeThickness="3"
                     Fill="{StaticResource DefaultAvatarBrush}"/>

                        <Button x:Name="UploadPictureBtn"
                    Content="UPLOAD PICTURE"
                    Background="#FF666666"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="12,8"
                    FontSize="12"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="UploadPictureBtn_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF555555"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- User Information Section -->
                    <Border Grid.Row="2"
                  Background="#FFF8F8F8"
                  CornerRadius="6"
                  Padding="20"
                  Margin="0,0,0,25">
                        <StackPanel>
                            <TextBlock Text="USER INFORMATION"
                         FontWeight="Bold"
                         FontSize="14"
                         Margin="0,0,0,15"
                         Foreground="#FF333333"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Username:"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"
                           Foreground="#FF666666"/>
                                <TextBlock Grid.Row="0" Grid.Column="1"
                           x:Name="UsernameDisplay"
                           Text="username"
                           Margin="0,0,0,8"
                           Foreground="#FF333333"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Email:"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"
                           Foreground="#FF666666"/>
                                <TextBlock Grid.Row="1" Grid.Column="1"
                           x:Name="EmailDisplay"
                           Text="email@example.com"
                           Margin="0,0,0,8"
                           Foreground="#FF333333"/>

                                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Member Since:"
                           FontWeight="SemiBold"
                           Foreground="#FF666666"/>
                                <TextBlock Grid.Row="2" Grid.Column="1"
                           x:Name="MemberSinceDisplay"
                           Text="January 2024"
                           Foreground="#FF333333"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Preferences Section -->
                    <Border Grid.Row="3"
                  x:Name="PreferencesSection"
                  Background="#FFF0F8FF"
                  CornerRadius="6"
                  Padding="20"
                  Margin="0,0,0,25"
                  Visibility="Visible">
                        <StackPanel>
                            <TextBlock Text="GYM PREFERENCES"
                         FontWeight="Bold"
                         FontSize="14"
                         Margin="0,0,0,15"
                         Foreground="#FF333333"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Fitness Level:"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"
                           Foreground="#FF666666"/>
                                <TextBlock Grid.Row="0" Grid.Column="1"
                           x:Name="FitnessLevelDisplay"
                           Text="Intermediate"
                           Margin="0,0,0,8"
                           Foreground="#FF333333"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Workout Days:"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"
                           Foreground="#FF666666"/>
                                <TextBlock Grid.Row="1" Grid.Column="1"
                           x:Name="WorkoutDaysDisplay"
                           Text="4 days/week"
                           Margin="0,0,0,8"
                           Foreground="#FF333333"/>

                                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Goal:"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"
                           Foreground="#FF666666"/>
                                <TextBlock Grid.Row="2" Grid.Column="1"
                           x:Name="GoalDisplay"
                           Text="Muscle Building"
                           Margin="0,0,0,8"
                           Foreground="#FF333333"/>

                                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="Preferred Time:"
                           FontWeight="SemiBold"
                           Foreground="#FF666666"/>
                                <TextBlock Grid.Row="3" Grid.Column="1"
                           x:Name="PreferredTimeDisplay"
                           Text="Morning (6-9 AM)"
                           Foreground="#FF333333"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="5"
                      Orientation="Vertical"
                      HorizontalAlignment="Stretch"
                      Margin="0,0,0,25">

                        <!-- Admin Page Button -->
                        <Button x:Name="AdminPageBtn"
                    Content="Admin Page"
                    Width="100"
                    Height="30"
                    Margin="5,0,0,10"
                    Visibility="Collapsed"
                    Click="AdminPageBtn_Click"/>

                        <!-- Gym Planner Button -->
                        <Button x:Name="GymPlannerBtn"
                    Content="GO TO GYM PLANNER"
                    Background="#FFE91E63"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="0,15"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="0,0,0,15"
                    Cursor="Hand"
                    Click="GymPlannerBtn_Click">
                            <!-- style omitted for brevity -->
                        </Button>

                        <!-- Secondary Buttons -->
                        <UniformGrid Columns="2" HorizontalAlignment="Stretch">
                            <Button x:Name="ResetPasswordBtn"
                      Content="RESET PASSWORD"
                      Background="#FF666666"
                      Foreground="White"
                      BorderThickness="0"
                      Padding="0,12"
                      FontSize="12"
                      FontWeight="Bold"
                      Margin="0,0,5,0"
                      Cursor="Hand"
                      Click="ResetPasswordBtn_Click">
                                <!-- style omitted for brevity -->
                            </Button>
                            <Button x:Name="DeleteAccountBtn"
                      Content="DELETE ACCOUNT"
                      Background="#FFDC3545"
                      Foreground="White"
                      BorderThickness="0"
                      Padding="0,12"
                      FontSize="12"
                      FontWeight="Bold"
                      Margin="5,0,0,0"
                      Cursor="Hand"
                      Click="DeleteAccountBtn_Click">
                                <!-- style omitted for brevity -->
                            </Button>
                        </UniformGrid>
                    </StackPanel>

                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
