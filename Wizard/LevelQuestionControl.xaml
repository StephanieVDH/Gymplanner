<UserControl 
    x:Class="Gymplanner.Wizard.LevelQuestionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">

    <StackPanel Margin="16" VerticalAlignment="Top">
        <TextBlock 
        Text="What’s your fitness level?" 
        FontSize="18" FontWeight="Bold" 
        Margin="0,0,0,12"/>

        <!-- Replace these with however many choices you have -->
        <Button 
        Content="Beginner" 
        Command="{Binding SelectLevelCommand}" 
        CommandParameter="Beginner" 
        Margin="0,4"/>
        <Button 
        Content="Intermediate" 
        Command="{Binding SelectLevelCommand}" 
        CommandParameter="Intermediate" 
        Margin="0,4"/>
        <Button 
        Content="Advanced" 
        Command="{Binding SelectLevelCommand}" 
        CommandParameter="Advanced" 
        Margin="0,4"/>
    </StackPanel>
</UserControl>

