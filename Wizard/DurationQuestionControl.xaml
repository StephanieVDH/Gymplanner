<UserControl 
    x:Class="Gymplanner.Wizard.DurationQuestionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <StackPanel Margin="16" VerticalAlignment="Top">
        <TextBlock 
        Text="How long should each session be?" 
        FontSize="18" FontWeight="Bold" 
        Margin="0,0,0,12"/>
        <Button Content="30 minutes"
            Command="{Binding SelectDurationCommand}"
            CommandParameter="30 minutes"
            Margin="0,5"/>
        <Button Content="45 minutes"
            Command="{Binding SelectDurationCommand}"
            CommandParameter="45 minutes"
            Margin="0,5"/>
        <Button Content="60 minutes"
            Command="{Binding SelectDurationCommand}"
            CommandParameter="60 minutes"
            Margin="0,5"/>
        <Button Content="90 minutes"
            Command="{Binding SelectDurationCommand}"
            CommandParameter="90 minutes"
            Margin="0,5"/>
    </StackPanel>
</UserControl>
