<UserControl 
    x:Class="Gymplanner.Wizard.SessionsQuestionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">

    <StackPanel Margin="16" VerticalAlignment="Top">

        <!-- 1) Put your resources up front, before any Buttons -->
        <StackPanel.Resources>
            <Style x:Key="SessionButtonBase" TargetType="Button">
                <Setter Property="Width"     Value="50"/>
                <Setter Property="Margin"    Value="0,4,8,4"/>
                <Setter Property="Background" Value="LightGray"/>
                <Setter Property="Foreground" Value="Black"/>
            </Style>
        </StackPanel.Resources>

        <TextBlock 
      Text="How many sessions per week?" 
      FontSize="18" FontWeight="Bold" 
      Margin="0,0,0,12"/>

        <StackPanel Orientation="Horizontal">
            <!-- Button 1 -->
            <Button Content="1"
              Command="{Binding SelectSessionsCommand}"
              CommandParameter="1">
                <!-- 2) Only one Style: the property element. No Style="…" attr. -->
                <Button.Style>
                    <Style TargetType="Button" 
                 BasedOn="{StaticResource SessionButtonBase}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedSessions}" 
                           Value="1">
                                <Setter Property="Background" Value="CornflowerBlue"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Button 2 -->
            <Button Content="2"
              Command="{Binding SelectSessionsCommand}"
              CommandParameter="2">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource SessionButtonBase}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedSessions}" Value="2">
                                <Setter Property="Background" Value="CornflowerBlue"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Button 3 -->
            <Button Content="3"
              Command="{Binding SelectSessionsCommand}"
              CommandParameter="3">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource SessionButtonBase}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedSessions}" Value="3">
                                <Setter Property="Background" Value="CornflowerBlue"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Button 4 -->
            <Button Content="4"
              Command="{Binding SelectSessionsCommand}"
              CommandParameter="4">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource SessionButtonBase}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedSessions}" Value="4">
                                <Setter Property="Background" Value="CornflowerBlue"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Button 5 -->
            <Button Content="5"
              Command="{Binding SelectSessionsCommand}"
              CommandParameter="5">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource SessionButtonBase}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedSessions}" Value="5">
                                <Setter Property="Background" Value="CornflowerBlue"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Button 6+ -->
            <Button Content="6"
              Command="{Binding SelectSessionsCommand}"
              CommandParameter="6">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource SessionButtonBase}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedSessions}" Value="6+">
                                <Setter Property="Background" Value="CornflowerBlue"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

    </StackPanel>
</UserControl>

