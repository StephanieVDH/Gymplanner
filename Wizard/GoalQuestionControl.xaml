<UserControl 
    x:Class="Gymplanner.Wizard.GoalQuestionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <StackPanel Margin="16" VerticalAlignment="Top">
        <TextBlock 
        Text="What’s your goal?" 
        FontSize="18" FontWeight="Bold" 
        Margin="0,0,0,12"/>
        <Button Content="Endurance (Cardio)"
        Command="{Binding SelectGoalCommand}"
        CommandParameter="1" />
        <Button Content="Strength"
        Command="{Binding SelectGoalCommand}"
        CommandParameter="2" />
        <Button Content="Hypertrophy"
        Command="{Binding SelectGoalCommand}"
        CommandParameter="3" />
        <Button Content="Maintenance"
        Command="{Binding SelectGoalCommand}"
        CommandParameter="4" />
        <Button Content="General Fitness"
        Command="{Binding SelectGoalCommand}"
        CommandParameter="5" />
        <Button Content="Flexibility / Mobility"
        Command="{Binding SelectGoalCommand}"
        CommandParameter="6" />

    </StackPanel>
</UserControl>

